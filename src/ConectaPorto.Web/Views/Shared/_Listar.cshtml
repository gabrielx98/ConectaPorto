@using ConectaPorto.Web.ViewModel;
@using ConectaPorto.Models;
@model ConectaPorto.Web.ViewModel.ListarViewModel;

<div class="card mt-3 ">
    <div class="card-header bg-white">
        <div class="row justify-content-between align-items-center flex-grow-1">
            <div class="col-md">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="card-header-title m-0">@Model.TituloPagina</h4>
                </div>
            </div>


            <div class="col-auto">
                <!-- Filter -->
                <div class="row align-items-sm-center">
                    <div class="col-sm-auto">
                        <div class="row align-items-center gx-0">
                            <div class="col">
                                <span class="text-secondary me-2">Coluna:</span>
                            </div>
                            <!-- End Col -->

                            <div class="col-auto">
                                <!-- Select -->
                                <div class="">
                                    <select class="form-select form-select form-select-borderless " data-target-column-index="2" data-target-table="datatable" autocomplete="off">
                                        <option value="null" selected>Todas</option>
                                        @foreach (var coluna in Model.Colunas)
                                        {
                                            <option value="@coluna">@coluna</option>
                                        }
                                    </select>
                                </div>
                                <!-- End Select -->
                            </div>
                            <!-- End Col -->
                        </div>
                        <!-- End Row -->
                    </div>
                    <!-- End Col -->

                    <div class="col-md">
                        <!-- Search -->
                        <div class="input-group input-group-merge input-group-flush">
                            <input type="search" class="form-control" placeholder="Filtrar" aria-label="Filtrar">
                            <div class="input-group-prepend input-group-text">
                                <a type="button"><i class="fa-solid fa-search"></i></a>
                            </div>
                        </div>
                        <!-- End Search -->
                    </div>
                    <div class="col-1 me-3">
                        <!-- Search -->
                        <a type="button" class="btn btn-success" title="Exportar" asp-action="Exportar"><i class="fa-solid fa-file-excel"></i></a>
                        <!-- End Search -->
                    </div>
                    <!-- End Col -->
                </div>
                <!-- End Filter -->
            </div>
            <!-- End Col -->
        </div>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover text-center mb-0">
                <thead class="table-secondary">
                    <tr>
                        <th class="col-1">
                            <input class="form-check-input" type="checkbox" />
                        </th>
                        @foreach (var coluna in Model.Colunas)
                        {
                            <th class="col">@coluna</th>
                        }
                        <th class="col-1">
                            <span>Ações</span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var linha in Model.Linhas)
                    {
                        <tr>
                            <td class="col-1">
                                <input class="form-check-input" type="checkbox" />
                            </td>
                            @foreach (var celula in @linha)
                            {
                                <td class="col">@celula</td>
                            }
                            <td class="col-1">
                                <div class="btn-group" role="group" aria-label="ações">
                                    <a type="button" class="btn btn-danger" title="Excluir" asp-action="Excluir" asp-route-id="@linha.First()"><i class="fa-solid fa-trash"></i></a>
                                    <a type="button" class="btn btn-primary" title="Editar" data-bs-toggle="modal" data-bs-target="#Editar">
                                        <i class="fa-solid fa-pencil"></i>
                                    </a>
                                    @{
                                        var editar = new List<List<string>> ();
                                        editar.Add(Model.Colunas);
                                        editar.Add(linha);
                                    }
                                    <partial name="_Editar" for="@editar"/>
                                </div> 
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer">
        <!-- Pagination -->
        <div class="row justify-content-center justify-content-between align-items-center mt-2">

            <div class="col mb-2">
                <div class="d-flex justify-content-start align-items-center">
                    <span class="me-2">Mostrar:</span>

                    <!-- Select -->
                    <div>
                        <select class="form-select ">
                            <option value="4">04</option>
                            <option value="6">06</option>
                            <option value="8" selected>08</option>
                            <option value="12">12</option>
                        </select>
                    </div>
                    <!-- End Select -->
                    <span class="text-secondary me-2 ms-2">de @Model.TotalItens</span>
                </div>
            </div>
            <!-- End Col -->

            <div class="col mb-2">
                <div class="d-flex justify-content-end align-items-center">
                    <!-- Pagination -->
                    <nav aria-label="..." class="bg-light">
                        <ul class="pagination m-0 align-items-center">
                            <li class="page-item disabled">
                                <span class="page-link">Previous</span>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item active" aria-current="page">
                                <span class="page-link">2</span>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- End Col -->
        </div>
        <!-- End Pagination -->
    </div>
</div>

<style>
    th {
        border-style: none;
    }

    td {
        align-content: baseline;
    }
</style>